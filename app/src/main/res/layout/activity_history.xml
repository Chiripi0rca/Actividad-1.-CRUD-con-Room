<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/historyMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvHistoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historial de acciones"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Filtro por tipo de acciÃ³n -->
    <TextView
        android:id="@+id/tvFilterAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filtrar por accion"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvHistoryTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinnerActionFilter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvFilterAction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Filtro por fecha -->
    <Button
        android:id="@+id/btnDateFilter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Filtrar por dia"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerActionFilter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnClearFilters"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btnClearFilters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Limpiar filtros"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerActionFilter"
        app:layout_constraintStart_toEndOf="@id/btnDateFilter"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/tvSelectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha: 2025-12-13"
        android:textSize="14sp"
        android:textStyle="italic"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnDateFilter"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Lista de historial -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RVhistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSelectedDate" />


</androidx.constraintlayout.widget.ConstraintLayout>